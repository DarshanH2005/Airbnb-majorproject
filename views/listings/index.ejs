<% layout("layouts/boilerplate") %>
<body>
  
    <h1 class="mt-3">All Listings</h1>
    <!-- <form action="/listings/new" method="get" >
        <button>New listing</button>
    </form> -->

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3">
    <%for(let listing of alllistings){%>
    <a href="/listings/<%= listing.id %>" class="alink">
        <div class="card col listing-card" >
            <img src="<%= listing.image.url %>" class="card-img-top" alt="..." style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <b><p class="card-text"><%= listing.title %></b> <br/>
                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> /Night
            
            </p>
            </div>
          </div>
    </a>
      <% } %>
</div>


    
</body>

